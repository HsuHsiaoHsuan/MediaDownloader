<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/malibu</item>
        <item name="colorPrimaryVariant">@color/onahau</item>
        <item name="colorPrimaryDark">@color/danube</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/zanah</item>
        <item name="colorSecondaryVariant">@color/hint_of_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ImageButtonTint">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="Theme.BrowserActivity" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>